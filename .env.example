# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_API_LLM_DEPLOYMENT_ID=gpt-4
AZURE_OPENAI_API_EMBEDDINGS_DEPLOYMENT_ID=text-embedding-3-large
AZURE_OPENAI_LLM_MODEL=gpt-4-0613
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Cohere API
COHERE_API_KEY=your_cohere_api_key

# Embedding Models Configuration
EMBEDDING_MODEL_NAME=deutsche-telekom/gbert-large-paraphrase-cosine
GERMAN_EMBEDDING_MODEL_NAME=deutsche-telekom/gbert-large-paraphrase-cosine
ENGLISH_EMBEDDING_MODEL_NAME=azure_openai

# Chunking Parameters
CHUNK_SIZE=512
CHUNK_OVERLAP=16
PARENT_CHUNK_SIZE=4096
PARENT_CHUNK_OVERLAP=32
PAGE_OVERLAP=16

# Reranking Configuration
RERANKING_TYPE=cohere
GERMAN_COHERE_RERANKING_MODEL=rerank-v3.5
ENGLISH_COHERE_RERANKING_MODEL=rerank-v3.5
MIN_RERANKING_SCORE=0.2

# Collection and Document Paths
COLLECTION_NAME=rag_collection
SOURCES_PATH=/app/data/documents
MAX_CHUNKS_CONSIDERED=10
MAX_CHUNKS_LLM=6

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://mongodb:27017/parent_documents_db
MONGODB_DATABASE_NAME=parent_documents_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:8501,http://frontend:8501

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8501

# Logging and Debugging
LOG_LEVEL=INFO
SHOW_INTERNAL_MESSAGES=false

# System Parameters
USER_AGENT=rag_assistant